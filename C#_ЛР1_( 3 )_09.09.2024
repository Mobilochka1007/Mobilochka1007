using System;

class Program
{
    static void Main()
    {
        
        string input = "Це приклад речення для завдання";
        
        string[] words = input.Split(' ');

        for (int i = 0; i < words.Length; i++)
        {
            
            if ((i + 1) % 2 != 0)
            {
                
                Console.WriteLine($"Слово: {words[i]}, Кiлькiсть букв: {words[i].Length}");
            }
        }
    }
}
